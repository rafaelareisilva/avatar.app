<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.CadastroEstampadorPage"
             Title="Cadastro Estampador">

    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Cadastro Estampador" 
                   FontSize="Large" 
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>
            
            <Label Text="Nome:" />
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="NomeEntry" Placeholder="Nome" HorizontalOptions="FillAndExpand"/>
                
            </StackLayout>

            <Label Text="Telefone:" />
            <Entry x:Name="TelefoneEntry" Placeholder="Telefone" Keyboard="Telephone"/>

            <Label Text="Endereço:" />
            <Entry x:Name="EnderecoEntry" Placeholder="Endereço"/>

            <Button Text="Cadastrar" 
                    BackgroundColor="#87CEEB" 
                    TextColor="White" 
                    Clicked="OnCadastrarClicked"
                    HorizontalOptions="Center"/>

            <Button Text="Voltar" 
                    Clicked="OnVoltarClicked"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ScrollView>
    
</ContentPage>
