<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.CadastroCompraMateriaPrima"
             Title="Compra Matéria Prima">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Compra Matéria Prima"
                   FontSize="Large"
                   HorizontalOptions="Center" />

            
                    <Label Text="Fornecedor:" />
                    <Picker x:Name="pickerFornecedor"
                    ItemDisplayBinding="{Binding Nome}"
                    HorizontalOptions="Fill"/>
     

           <Label Text="Matéria Prima:" />
                    <Picker x:Name="pickerCompraMp"
                    ItemDisplayBinding="{Binding Nome}"
                    HorizontalOptions="Fill"/>

           
                      <Label Text="Unidade:" />
                    <Picker x:Name="pickerUnidade"
                    ItemDisplayBinding="{Binding Nome}"
                    HorizontalOptions="Fill"/>

            <Entry x:Name="ValorEntry"
                   Placeholder="VALOR:"
                   Keyboard="Numeric" />

            <Button Text="FINALIZAR"
                    x:Name="FinalizarButton" />

            <Button Text="VOLTAR"
                    x:Name="VoltarButton" />

        </StackLayout>
    </ScrollView>
</ContentPage>
