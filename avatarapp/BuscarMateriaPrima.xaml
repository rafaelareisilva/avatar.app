<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.BuscarMateriaPrima"
             Title="Buscar Matéria-Prima">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20">
            <StackLayout Orientation="Horizontal">
                <Label Text="BUSCAR:" />
                <Entry Placeholder="Digite o nome da matéria-prima" x:Name="txtBusca" />
            
            </StackLayout>
            <HorizontalStackLayout>
                <Button Text="VOLTAR" Clicked="Voltar_Clicked" />
                <Button Text="+" Clicked="Adicionar_Clicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
