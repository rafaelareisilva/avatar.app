<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.CadastroCompraMp"
             Title="Compra Matéria Prima">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Compra Matéria Prima"
                   FontSize="Large"
                   HorizontalOptions="Center" />

            <Entry x:Name="NomeFornecedorEntry"
                   Placeholder="NOME FORNECEDOR:" />

            <Entry x:Name="TelefoneEntry"
                   Placeholder="TELEFONE:"
                   Keyboard="Telephone" />

            <Entry x:Name="MateriaPrimaEntry"
                   Placeholder="MATÉRIA PRIMA:" />

            <Picker x:Name="UnidadeDeMedidaPicker"
                    Title="UNIDADE DE MEDIDA:"
                    ItemsSource="{Binding Unidades}" />

            <Entry x:Name="ValorEntry"
                   Placeholder="VALOR:"
                   Keyboard="Numeric" />

            <Button Text="FINALIZAR"
                    x:Name="FinalizarButton" />

            <Button Text="VOLTAR"
                    x:Name="VoltarButton" />

        </StackLayout>
    </ScrollView>
</ContentPage>
