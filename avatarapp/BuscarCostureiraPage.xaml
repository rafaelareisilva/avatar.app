<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.BuscarCostureiraPage"
             Title="Buscar Costureira">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Text="Buscar Costureira"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     VerticalOptions="CenterAndExpand">
            <Entry x:Name="BuscarEntry"
                   Placeholder="BUSCAR"
                   HorizontalOptions="FillAndExpand"/>
            <Button Text="🔍"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Clicked="OnSearchButtonClicked"/>
            <Button Text="🔄"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Clicked="OnRefreshButtonClicked"/>
        </StackLayout>

        <StackLayout Grid.Row="2"
                     Orientation="Horizontal"
                     HorizontalOptions="CenterAndExpand">
            <Button Text="VOLTAR"
                    HorizontalOptions="Start"
                    Clicked="OnBackButtonClicked"/>
            <Button Text="+"
                    HorizontalOptions="End"
                    Clicked="OnAddButtonClicked"/>
        </StackLayout>

        <!-- Frame for Excluir Confirmation -->
        <Frame x:Name="ExcluirFrame"
               Padding="10"
               BackgroundColor="LightGray"
               IsVisible="False"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center">
            <StackLayout>
                <Label Text="EXCLUIR?"
                       HorizontalOptions="Center"/>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center">
                    <Button Text="SIM"
                            Clicked="OnExcluirSimClicked"/>
                    <Button Text="NÃO"
                            Clicked="OnExcluirNaoClicked"/>
                </StackLayout>
            </StackLayout>
        </Frame>

        <!-- Frame for Atualizar Confirmation -->
        <Frame x:Name="AtualizarFrame"
               Padding="10"
               BackgroundColor="LightGray"
               IsVisible="False"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center">
            <StackLayout>
                <Label Text="DESEJA ATUALIZAR?"
                       HorizontalOptions="Center"/>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center">
                    <Button Text="SIM"
                            Clicked="OnAtualizarSimClicked"/>
                    <Button Text="NÃO"
                            Clicked="OnAtualizarNaoClicked"/>
                </StackLayout>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>