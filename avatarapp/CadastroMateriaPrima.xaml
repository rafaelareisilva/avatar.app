<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.CadastroMateriaPrima"
             Title="Cadastro Matéria Prima">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Cadastro Matéria Prima"
                   FontSize="Large"
                   HorizontalOptions="Center" />

            <Entry x:Name="ProdutoEntry"
                   Placeholder="PRODUTO:" />

            <Picker x:Name="UnidadeDeMedidaPicker"
                    Title="UNIDADE DE MEDIDA:"
                    ItemsSource="{Binding Unidades}" />

            <Button Text="CADASTRAR"
                    x:Name="CadastrarButton" />

            <Button Text="VOLTAR"
                    x:Name="VoltarButton" />

        </StackLayout>
    </ScrollView>
</ContentPage>
